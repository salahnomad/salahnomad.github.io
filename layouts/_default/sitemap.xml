{{- /* 
  FICHIER : /layouts/_default/sitemap.xml
  -------------------------------------------------------------
  Sitemap personnalis√© pour SalahNomad.com.
  Objectif : Exclure automatiquement toutes les pages qui ont une balise "noindex".
*/ -}}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {{- range .Site.Pages -}}
    {{- /* --- Condition d'exclusion --- */ -}}
    {{- if not .Params.noindex -}}
      {{- if not (in .Params.robots "noindex") -}}
        {{- if not (and (eq .Kind "taxonomy") (eq .Type "tags")) -}}
          <url>
            <loc>{{ .Permalink }}</loc>
            {{- if not .Lastmod.IsZero -}}
              <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</lastmod>
            {{- end -}}
            {{- with .Sitemap.ChangeFreq -}}
              <changefreq>{{ . }}</changefreq>
            {{- end -}}
            {{- if ge .Sitemap.Priority 0.0 -}}
              <priority>{{ .Sitemap.Priority }}</priority>
            {{- end -}}
            {{- if .IsTranslated -}}
              {{- range .Translations -}}
                <xhtml:link
                            rel="alternate"
                            hreflang="{{ .Language.Lang }}"
                            href="{{ .Permalink }}"
                            />
              {{- end -}}
              <xhtml:link
                          rel="alternate"
                          hreflang="{{ .Language.Lang }}"
                          href="{{ .Permalink }}"
                          />
            {{- end -}}
          </url>
        {{- end -}}
      {{- end -}}
    {{- end -}}
  {{- end -}}
</urlset>